FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{

    inlet
    {
        type            waveVelocity;
        refValue        uniform ( 0 0 0 ); 
        refGradient     uniform ( 0 0 0 );
        valueFraction   uniform 1;
        value           uniform ( 0 0 0 ); 
    }

    outlet
    {
        type            fixedValue;
	value		uniform (0 0 0);
    }



    walls
    {
        type            slip;
    }

    ground
    {
        type            fixedValue;
	value		uniform (0 0 0);
    }
    atmosphere
    {
        type            pressureInletOutletVelocity;
	value		uniform (0 0 0);
    }

    floatingObject
    {
        type            movingWallVelocity;
	value		uniform (0 0 0);
    }

    overset
    {
        type            overset;
    }

    sides
    {
        type            overset;
    }
}

// ************************************************************************* //
